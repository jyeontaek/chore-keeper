<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yeontaekj.chorekeeper.NewChoreActivity">
    <ImageView
        android:id="@+id/iv_new_chore_icon"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/et_chore_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintLeft_toRightOf="@+id/iv_new_chore_icon"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/iv_new_chore_icon"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/et_chore_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_chore_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_new_chore_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/button_add_chore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/new_chore"
        app:layout_constraintTop_toBottomOf="@+id/iv_new_chore_icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
